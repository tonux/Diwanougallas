<%= form_for @dahira, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nom, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nom, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :desc, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :adresse, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :adresse, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :region_id, :class => 'control-label' %>
    <div class="controls">
      <% region_array = Region.all.map { |region| [region.nom, region.id] } %>
      <%= options_for_select(region_array) %>
      <%= f.select(:region_id, options_for_select(region_array)) %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :telephone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telephone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :photo, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dahiras_path, :class => 'btn' %>
  </div>
<% end %>
