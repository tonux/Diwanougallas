<%- model_class = Dahira -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nom) %></th>
      <th><%= model_class.human_attribute_name(:desc) %></th>
      <th><%= model_class.human_attribute_name(:adresse) %></th>
      <th><%= model_class.human_attribute_name(:region_id) %></th>
      <th><%= model_class.human_attribute_name(:telephone) %></th>
      <th><%= model_class.human_attribute_name(:photo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @dahiras.each do |dahira| %>
      <tr>
        <td><%= link_to dahira.id, dahira_path(dahira) %></td>
        <td><%= dahira.nom %></td>
        <td><%= dahira.desc %></td>
        <td><%= dahira.adresse %></td>
        <td><%= dahira.region_id %></td>
        <td><%= dahira.telephone %></td>
        <td><%= link_to( image_tag(@dahira.photo_url, :width => 240, :height => 100),dahira_path(@dahira)) if @dahira.photo.present? %></td>
        <td><%=l dahira.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_dahira_path(dahira), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      dahira_path(dahira),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_dahira_path,
            :class => 'btn btn-primary' %>
